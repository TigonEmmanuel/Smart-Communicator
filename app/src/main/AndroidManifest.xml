<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
    FEATURE PERMISSIONS:
    These tell the Google Play Store what hardware your app uses.
    -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- THIS IS THE NEW FEATURE TAG TO FIX THE WARNING -->
    <!-- It tells Google Play that telephony is optional, not required. -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!--
    APP PERMISSIONS:
    These are the permissions your app will request from the user.
    -->

    <!-- For saving new contacts to the phone's database -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <!-- For reading contacts from the phone to display in the list -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- For placing calls directly -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- For using the camera to scan text -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- For the Map feature -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartCommunicator">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
